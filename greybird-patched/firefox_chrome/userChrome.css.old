@namespace url("http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"); /* set default namespace to XUL */

#nav-bar
{
	-moz-appearance: none !important;
	border-bottom:1px solid #939393;
	border-top:1px solid #939393;
	inset 0 1px rgba(255,255,255,0.15) !important;
	background: -moz-linear-gradient(#D5D5D5, #B8B8B8) !important;
}

#navigator-toolbox #PersonalToolbar  , #web-developer-toolbar
{
	background: -moz-linear-gradient(#D5D5D5, #B8B8B8) !important;
	padding: 3px !important;
	padding-top: 2px !important;
	box-shadow: inset 0 1px #939393,
              inset 0 2px rgba(255,255,255,0.07) !important;
	border-bottom:1px solid #939393;
}

.dialog-button,
.button
{
	padding:5px !important;
}
